default vesamenu.c32
prompt 0
timeout 10

MENU BACKGROUND /var/lib/tftpboot/fractal-sea.png

LABEL 1
    MENU LABEL ^1) Install FreeBSD
    MENU AUTOBOOT
    MENU DEFAULT
    KERNEL /data/{{ os_name }}/{{ os_maj }}/{{ os_min }}/boot/kernel/kernel
    APPEND initrd=/data/{{ os_name }}/{{ os_maj }}/{{ os_min }}/boot/pxeboot devfs=nomount

LABEL 2
    MENU LABEL ^2) Boot local hard drive
    LOCALBOOT 0
