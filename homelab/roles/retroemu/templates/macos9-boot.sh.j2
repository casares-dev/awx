#!/bin/sh

QEMU_PATH="/opt/emulators/qemu"
DISK_PATH="/opt/emulators/disks/qemu"
QEMU_PPC_BIN="$QEMU_PATH/ppc-softemu/qemu-system-ppc"

pushd "$EMU_PATH"
"$QEMU_PPC_BIN" -cpu "g4" -M mac99,via=pmu -m {{ macos9_mem_mb }} -hda "$DISK_PATH"/{{ macos9_hd_img }} -netdev user=id=mynet0 -boot c -g 1024x768x32 -device usb-kbm -device usb-mouse -vnc 0.0.0.0:1
popd

exit